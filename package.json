{
  "name": "grift-app-01",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "copy-json": "./scripts/copy-json-definitions.sh",
    "copy-json-dev": "mkdir -p public/api/definitions && mkdir -p .netlify/functions-serve/api/definitions && find netlify/functions -name '*.json' -exec cp {} public/api/definitions/ \\; && find netlify/functions -name '*.json' -exec cp {} .netlify/functions-serve/api/definitions/ \\;",
    "dev:full": "npm run copy-json-dev && npm run dev"
  },
  "dependencies": {
    "@netlify/functions": "^4.2.1",
    "@preact/signals": "^2.2.1",
    "@types/node": "^24.1.0",
    "@types/uuid": "^10.0.0",
    "preact": "^10.27.0",
    "preact-iso": "^2.9.2",
    "preact-nebula-ui": "^1.2.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@preact/preset-vite": "^2.10.2",
    "@storybook/addon-a11y": "^9.1.0",
    "@storybook/addon-docs": "^9.1.0",
    "@storybook/addon-vitest": "^9.1.0",
    "@storybook/preact-vite": "^9.1.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "storybook": "^9.1.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
